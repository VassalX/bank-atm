<% include common/header.ejs %>
<body class="text-center d-flex align-items-center">
<div class="form-signin">
    <form >

        <h1 class="h1 font-weight-normal">BANK</h1>
        <h1 class="h3 font-weight-normal">Please sign in</h1>

        <p id="messageTel" class="isRed"></p>
        <p id="messagePassword" class="isRed"></p>

        <label for="inputTel" class="sr-only">Email address</label>
        <input type="tel" id="inputTel" class="form-control top-form" placeholder="Phone number" required autofocus>

        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control bottom-form" placeholder="Password" required>

        <button type="button" id="loginButton" class="btn btn-lg btn-primary btn-block" disabled>Sign in</button>
    </form>
    <form action="/register" method="get">
        <button class="btn btn-lg btn btn-outline-dark btn-block back-b">
            Sign up
        </button>
    </form>
    <button type="button" class="btn btn-lg btn btn-link btn-block">Forgot password?</button>
</div>
</body>
</html>